{
	"manifest_version": 2,
	"name": "BitBucket Open PRs count",
	"short_name": "BBPR",
	"description": "This extension will show you a number of opened PRs assigned to you",
	"version": "1.0.1",

	"browser_action": {
		"default_title": ""
	},

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},

	"permissions": [
		"storage",
		"alarms",
		"https://*/",
		"http://*/"
	],

	"options_ui": {
    "chrome_style": true,
    "page": "settings.html"
  },

	"background": {
		"scripts": ["js/poll.js", "js/bootstrap.js"],
		"persistent": false
	}
}